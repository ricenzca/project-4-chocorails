<%= form_with(model: customer, local: true, class: "mb-5") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field text-left">
    <%= form.label :firstname, :style => "font-weight: bold"%>
    <%= form.text_field :firstname, :class => "form-control"%>
  </div>

   <div class="field text-left">
    <%= form.label :lastname, :style => "font-weight: bold" %>
    <%= form.text_field :lastname, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :email, :style => "font-weight: bold" %>
    <%= form.text_field :email, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :address1, :style => "font-weight: bold" %>
    <%= form.text_field :address1, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :address2, :style => "font-weight: bold" %>
    <%= form.text_field :address2, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :postal_code, :style => "font-weight: bold" %>
    <%= form.number_field :postal_code, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :country, :style => "font-weight: bold" %>
    <%= form.text_field :country, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :city, :style => "font-weight: bold" %>
    <%= form.text_field :city, :class => "form-control" %>
  </div>

  <div class="field text-left">
    <%= form.label :contact, :style => "font-weight: bold" %>
