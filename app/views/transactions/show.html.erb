<div class="transaction-show d-flex flex-wrap justify-content-around p-2">
<div class="col-lg-5 border my-4">
<h1> Order Details </h1>

<table class="table table-borderless">
  <tbody>
    <tr class="border-top">
      <td>
        Order No:
        <%= @order[0].order_number %>
      </td>
      <td>
        Promo Code:
        <% if @tranxaction[0].promo_id %>
          <%= @tranxaction[0].code %>
        <% else %>
          N.A.
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        Status:
        <%= @tranxaction[0].status %>
      </td>
      <td>
      </td>
    </tr>   
  </tbody>
</table>

<table class="table table-borderless">
  <thead>
    <tr class="border-top border-bottom">
      <th>
        Item
      </th>
      <th class="text-center">
        Quantity
      </th>
      <th class="text-center">
        Price
      </th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |item| %>
    <tr>
      <td>
        <%= item.name %>     
      </td>
      <td class="text-center">
        <%= item.product_quantity %> 
      </td>
      <td class="text-center">
        $
        <%= sprintf('%.2f', (item.price*item.product_quantity).round(2)) %> 
      </td>
    </tr>
    <% end %>

    <% subtotal = 0
    for i in @order do
      subtotal = subtotal + i.price*i.product_quantity
    end 
    subtotal = subtotal.round(2)
    %>

    <tr class="border-top">
      <td>Subtotal:</td>
      <td></td>
      <td class="text-center">$ <%= sprintf('%.2f', subtotal) %></td>
    </tr>

    <% if @tranxaction[0].promo_id %> 
      <% subtotalAfterDiscount = 0
      unless @tranxaction[0].percentage
        subtotalAfterDiscount = subtotal - @tranxaction[0].amount;
      else
        subtotalAfterDiscount = subtotal*(100-@tranxaction[0].amount)/100
        subtotalAfterDiscount = subtotalAfterDiscount.round(2)
      end

      if subtotalAfterDiscount < 0
        subtotalAfterDiscount = 0
      end

      gst = subtotalAfterDiscount*0.07
      gst = gst.round(2)
      %>

      <tr>
        <td>Subtotal (after promo):</td>
        <td></td>
        <td class="text-center">$ <%= sprintf('%.2f', subtotalAfterDiscount) %>
        </td>
      </tr>

    <% else
      gst = subtotal*0.07
      gst = gst.round(2) %>
    <% end %>

    <tr>
      <td>GST:</td>
      <td></td>
      <td class="text-center">$ <%= sprintf('%.2f', gst) %></td>
    </tr>

    <tr>
      <td>Shipping:</td>
      <td></td>
      <td class="text-center">$ 5.00</td>
    </tr>

    <tr class="border-top border-bottom">
      <td>Total Amount:</td>
      <td></td>
      <td class="text-center">$ <%= sprintf('%.2f', @tranxaction[0].total_amount) %></td>
    </tr>
  </tbody> 
</table>
</div>

<div class="col-lg-5 border my-4">
<h1> Customer Details </h1>
<table class="table table-borderless font-weight-normal mb-5">
  <tbody>
    <tr class="border-top">
      <td>
        <strong>Customer ID:</strong>
        <%= @tranxaction[0].customer_id %>
      </td>
      <td></td>
    </tr>
      <td>
        <strong>Email:</strong>
        <%= @tranxaction[0].email %>
      </td>
      <td>
        <strong>Contact No:</strong>
        <%= @tranxaction[0].contact %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>First Name:</strong>
        <%= @tranxaction[0].firstname %>
      </td>
      <td>
        <strong>Last Name:</strong>
        <%= @tranxaction[0].lastname %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Address Line 1:</strong>
        <%= @tranxaction[0].address1 %>
      </td>
      <td>
        <strong>Address Line 2:</strong>
        <%= @tranxaction[0].address2 %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Country:</strong>
        <%= @tranxaction[0].country %>
      </td>
      <td>
        <strong>State:</strong>
        <%= @tranxaction[0].state %>
      </td>
    </tr>
    <tr class="border-bottom">
      <td>
        <strong>City:</strong>
        <%= @tranxaction[0].city %>
      </td>
      <td>
        <strong>Postal Code:</strong>
        <%= @tranxaction[0].postal_code %>
      </td>
    </tr>
  </tbody>
</table>
</div>
</div>
  
  <div class="text-right back-btn">
    <a class="btn btn-warning" href="/admin">Back</a>
  </div>
</div>